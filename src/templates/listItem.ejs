<%
if (node.parent.ordered) {
  -%> <%= node.index + 1 -%>. <%= node.value.trim() -%><%
} else {
  function calcDepth(node) {
    return (node.parent.type === 'list' && node.parent.parent.type === 'listItem') ? calcDepth(node.parent.parent) + 1 : 1;
  }
  const depth = calcDepth(node);
  -%> <%= '*'.repeat(depth) -%> <%= node.value.trim() -%><%
}
-%>
